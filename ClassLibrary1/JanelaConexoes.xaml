<UserControl x:Class="JanelaConexao.JanelaDasConexoes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JanelaConexao"
             mc:Ignorable="d" 
             Width="300"
             Height="400"
             >

    <Grid Background="White">
        <TextBlock>Conexões</TextBlock>
        <ComboBox x:Name="ComboListaTagsConexoes" Width="200" Height="25" Margin="0,140,0,0" SelectionChanged="ComboListaTagsConexoes_SelectionChanged" />
        <ComboBox x:Name="ComboListaInstanciasConexoes" Width="200" Height="25" Margin="0,200,0,0" SelectionChanged="ComboListaInstanciasConexoes_SelectionChanged" />
    </Grid>
</UserControl>
