        <Button  x:Name="Exibir" Height="50" Width="100" Background="#F1F1F1" Click="Button_Click" Visibility="Visible">Exibir</Button>
        <ItemsControl x:Name="Conteudo" Width="800" Height="450">
            
                
                    <Grid>
                        <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="Blue" Margin="20,50,20,0"  >Conteudo 1</TextBlock>
                        <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="Blue" Margin="20,70,20,0"   >Conteudo 2</TextBlock>
                        <TextBlock  HorizontalAlignment="Center" FontSize="12" Foreground="Blue" Margin="20,90,20,0"  >Conteudo 3</TextBlock>
                    </Grid>
             
        
        </ItemsControl>
    </Grid>
</UserControl>
